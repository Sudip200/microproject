<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Home</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/tailwindcss/dist/tailwind.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>
  </head>
  </head>
  <body class="bg-gray-0 ">
    <div class="container mx-auto p-4">
      <h1 class="text-2xl font-bold mb-4">Projects Available</h1>
      <form class="flex flex-col mb-4 md:flex-row" >
        <input type="text" placeholder="Search projects..." class="border-gray-300 border rounded-l py-2 px-4 mb-2 md:mb-0 md:mr-2 flex-1">
        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold rounded-r py-2 px-4">Search</button>
      </form>
      <div class="flex justify-center mt-4 mb-6 md:mt-6 md:mb-8">
        <a href="/registerclient" class="inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-8 rounded">
          Add Project
        </a>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        <% projects.forEach(function(project) { %>
          <div class="bg-white shadow-md rounded-lg overflow-hidden ">
            <div class="p-4">
              <h2 class="text-xl font-bold mb-2"><%= project.title %></h2>
              <p class="text-gray-700 text-base mb-4"><%= project.description %></p>
              <ul class="mb-4">
                <% project.skills.forEach(function(skill) { %>
                  <li class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2"><%= skill %></li>
                <% }) %>
              </ul>
              <div class="flex justify-between items-center">
                <span class="font-bold text-xl"> â‚¹<%= project.budget %></span>
                <div class="flex">
                
                  <a href="/project?id=<%= project.id %>&islogin=false"  class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded">
                    Learn More
                  </a>
                  
                </div>
              </div>
            </div>
          </div>

        <% }) %>
        <script>
        


          function sendEmail(email) {
  var subject = encodeURIComponent('Project Proposal');
  var body = encodeURIComponent('Dear Client,\n\nI am writing to submit a proposal for your project. Please find the details below:\n\n...');
  window.location.href = 'mailto:' + email + '?subject=' + subject + '&body=' + body;
}




function openUPIApp(upiId) {
  const isMobile = /iPhone|iPad|iPod|Android/i.test(navigator.userAgent);
  const amount = 100.00; // replace with your desired amount
  const merchantName = "BuildMyProject"; // replace with your business name
  const transactionNote = "Payment for order #123"; // replace with your transaction note
  if (isMobile) {
        // Redirect to UPI payment app
        const upiUrl = `upi://pay?pa=${upiId}&pn=${merchantName}&tn=${transactionNote}&am=${amount}`;
  window.open(upiUrl);
      } else {
        // Display QR code and UPI ID
        const qrCode = new QRCode("qrcode", {
          text: `upi://${upiId}?amount=${amount}`,
          width: 256,
          height: 256,
          colorDark: "#000000",
          colorLight: "#ffffff",
          correctLevel: QRCode.CorrectLevel.H,
        });
        document.getElementById("upi-id").textContent = `UPI ID: ${upiId}`;
      }
  
}


        </script>
      </div>
    </div>
  </body>
  
  
</html>
